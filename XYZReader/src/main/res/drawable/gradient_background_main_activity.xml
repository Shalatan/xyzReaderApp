<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:endColor="@color/blueAccent"
                android:startColor="@color/purpleAccent"
                android:type="linear" />
        </shape>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="@color/blueAccent"
                android:gradientRadius="100"
                android:startColor="@color/purpleAccent"
                android:type="linear" />
        </shape>
    </item>
</selector>